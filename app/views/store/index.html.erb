<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1> </h1>

<% @products.each do |product| %>
  <div class="entry">
    <div class="row">

        <div class="col-md-2">
          <%= image_tag(product.image_url) %>
        </div>
        <div class="col-md-6">
          <h3><%= product.title %></h3>
          <%= sanitize(product.description) %>
        </div>
        <div class="price_line">
          <div class="col-md-2">
            <span class="price"><%= product.price %> </span>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>