
<h2 class="text-center"> Your Cart </h2>
    <table class="carts text-center">
      <% if @cart.line_items.count < 1 %>
        <h3>You don't have any items... have you checked out our <%= link_to "marketplace", "#" %>?</h3>
      <% else %>
        <table>
          <% @cart.line_items.each do |item| %>
            <tr>
              <td><%= item.quantity %>&times;</td>
              <td><%= item.product.title %></td>
              <td class="item-price"><%= number_to_currency(item.total_price) %> </td>
              <td><%= button_to 'Delete Item', item, :method => :delete %></td>
            </tr>
          <% end %> 
          
          <tr class= "total-line">
            <td colspan="2">Total</td>
            <td class="total-cell"><%= number_to_currency(@cart.total_price) %> </td>
          </tr>
        </table>
      <% end %>


  <%= button_to 'Empty cart', @cart, method: :delete,
                            data: { confirm: 'Are you sure that you want to delete all items from your cart?' } %>
  <%= link_to 'Edit', edit_cart_path(@cart) %> |
  <%= link_to 'Back', store_index_path %>
